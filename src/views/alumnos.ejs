<%- include('./partials/_header'); %>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <th>n°</th>
                    <th>Nombre</th>
                    <th>Apellido Paterno</th>
                    <th>Apellido Materno</th>
                    <th>Acciones</th>
                </thead>
                <tbody>
                    <% if(data){%>
                        <% for (var i = 0; i< data.length; i++){%>
                            <tr>
                                <td><%= (i+1) %></td>
                                <td><%= data[i].nombre %></td>
                                <td><%= data[i].apellido_pat %></td>
                                <td><%= data[i].apellido_mat %></td>
                            </tr>
                        <% }%>
                    <% }%>
                </tbody>
            </table>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="form-group">
                            <input type="text" name="nombre" placeholder="Nombre" class="form-control">
                        </div>
                        <div class="form-group mt-3">
                            <input type="text" name="apellido_pat" placeholder="Apellido Paterno" class="form-control">
                        </div>
                        <div class="form-group mt-3">
                            <input type="text" name="apellido_mat" placeholder="Apellido Materno" class="form-control">
                        </div>
                        <div class="d-flex justify-content-end"><button type="submit" class="btn btn-primary mt-3">Añadir Alumno</button></div>     
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('./partials/_footer'); %>