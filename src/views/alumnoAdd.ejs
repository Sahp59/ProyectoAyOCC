<%- include('./partials/_header'); %>

<div class="container">
    <div class="row mt-5">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= data.id_alu %>" method="post">
                        <div class="form-group">
                            <input type="text" name="nombre" placeholder="Nombre" value="<%= data.nombre %>" class="form-control">
                        </div>
                        <div class="form-group mt-3">
                            <input type="text" name="apellido_pat" placeholder="Apellido Paterno" value="<%= data.apellido_pat %>" class="form-control">
                        </div>
                        <div class="form-group mt-3">
                            <input type="text" name="apellido_mat" placeholder="Apellido Materno" value="<%= data.apellido_mat %>" class="form-control">
                        </div>
                        <div class="d-flex justify-content-end"><button type="submit" class="btn btn-success mt-3">Modificar Alumno</button></div>     
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/_footer'); %>